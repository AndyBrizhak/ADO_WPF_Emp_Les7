<Window x:Class="ADOEmp.EditWindDep"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADOEmp"
        mc:Ignorable="d"
        Title="EditWindDep" Height="150" Width="300">
    <Grid>
        <Label Content="Name Department" HorizontalAlignment="Left" Margin="18,40,0,0" VerticalAlignment="Top" Width="114"/>
        <TextBox x:Name="nameDepTextBox" HorizontalAlignment="Left" Height="23" Margin="144,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138"/>
        <Button x:Name="saveButtonDep" Content="Save" HorizontalAlignment="Left" Margin="27,82,0,0" VerticalAlignment="Top" Width="75" Click="saveButtonDep_Click"/>
        <Button x:Name="cancelButtonDep" Content="Cancel" HorizontalAlignment="Left" Margin="200,82,0,0" VerticalAlignment="Top" Width="75" Click="cancelButtonDep_Click"/>

    </Grid>
</Window>
